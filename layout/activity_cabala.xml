<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Opciones"
    android:background="@drawable/background_opciones">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="TU NOMBRE"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/age"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="TU NACIMIENTO"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tittle"
                android:layout_below="@id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/orbitron"
                android:text="@string/cabalaTi"
                android:textColor="#52BAFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/picture"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tittle"
                android:src="@drawable/arcano_1"
                android:layout_width="160dp"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/picture"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gilda_display"
                android:lineSpacingExtra="3dp"
                android:text="URGENCIA INTERIOR"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/jeroglifico_cuatro"
                android:layout_width="82dp"
                android:layout_height="82dp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

